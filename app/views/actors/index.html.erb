<p id="notice"><%= notice %></p>

<h1>Actors</h1>

<table>
  <thead>
    <tr>
       <th>Foto</th>
       <th>Nombre</th>
       <th>Bio</th>
       <th>Lugar Nacimiento</th>
       <th>Fecha Nacimiento</th>
       <th>Lugar Fallece</th>
       <th>Fecha Muerte</th>
       <th>Ver</th>
       <th>Editar</th>
       <th>Borrar</th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><img src=<%=actor.image_url %>></td>
        <td><%= actor.name %></td>
        <td><%= actor.bio %></td>
        <td><%= actor.birth_date %></td>
        <td><%= actor.birth_place %></td>
        <% if !actor.alive %>
          <td><%= actor.death_date %></td>
          <td><%= actor.death_place %></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

